{
  "manifest_version": 3,
  "name": "Taylor - Resume Tailoring Assistant",
  "version": "1.0.0",
  "description": "Tailor your resume and cover letters to job descriptions with AI assistance",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Taylor Resume Assistant"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  }
}
